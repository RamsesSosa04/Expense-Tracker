# docker/backend/Dockerfile.dev

FROM python:3.10-slim

WORKDIR /app

# Instalar dependencias del sistema necesarias para SQLite y build
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copiar requirements primero para cachear
COPY ./backend/requirements.txt /app/requirements.txt

# Instalar dependencias de Python
RUN pip install --no-cache-dir --upgrade -r /app/requirements.txt

# Copiar el resto del código
COPY ./backend /app

# Variables de entorno (pueden ser sobreescritas en docker-compose)
ENV PYTHONPATH=/app
ENV DATABASE_URL=sqlite:///./sql_app.db
ENV JWT_SECRET=siholaquetal
ENV JWT_ALGORITHM=HS256
ENV ACCESS_TOKEN_EXPIRE_MINUTES=30

# Comando para ejecutar la aplicación en desarrollo (con recarga automática)
CMD ["uvicorn", "src.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]